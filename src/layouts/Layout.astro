---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css'
const { pageTitle = 'Default title'} = Astro.props
const allPosts = await Astro.glob('../pages/cars/*.md');
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle || 'test'}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Montserrat:wght@400;500;600;700&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
	</head>
	<body>
		<Navigation/>
		<div class="content">	
			<slot />
		</div>

	</body>
</html>

<style>
	.content {
		padding: 0 40px;
	}
</style>
