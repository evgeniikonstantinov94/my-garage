---
import Sidebar from '../../components/Sidebar.astro';
import Layout from '../../layouts/Layout.astro';
const pageTitle = "Brands"

const allCars = await Astro.glob('../cars/*.md');
const tags = [...new Set(allCars.map((car) => car.frontmatter.brand).flat())];
---

<Layout pageTitle={pageTitle}>
    <div class="wrap">{tags.map((tag) => <a href={`/brands/${tag}`}>{tag}</a>)}</div>
</Layout>


<style>
  .wrap {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }
</style>